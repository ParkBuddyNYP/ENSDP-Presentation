                        $.ajax({
                            type: "POST",
                            url: url,
                            data: s,
                            headers: {
                                'Authorization': 'Bearer ' + sessionStorage.getItem("token").toString(),
                            },
                            success: callback,
                            error: callbackerror,
                            processData: false,
